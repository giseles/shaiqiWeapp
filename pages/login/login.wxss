.userInfo{
  width: 100%;
  display: flex;
  justify-content:center;
  align-items:center
}
.uerAvatarUrl{
  margin-right: 30rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50% 50%;
  overflow: hidden;
}
.inputList{
  padding: 50rpx 50rpx;
  width: 100%
}
.btnBox{
  margin: 0 auto;
  width: 650rpx;
}
.btnBox button{
  width: 100%
}
.mainBtn{
  margin-bottom: 30rpx
}
#sendCode{
  width: 200rpx;
  font-size: 30rpx;
  float: right
}
input[type="number"]{
  border: 1px solid #ccc;
  height: 70rpx;
  border-radius: 10rpx;
  margin-bottom:30rpx ;
  padding-left: 20rpx
}
#code{
  width: 400rpx;
  float: left
}